<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:text="Center_Button"
        android:textSize="20sp"
        android:background="@color/teal_200"
        android:id="@+id/centerButton"
        android:textColor="@color/white"
        ></Button>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_below="@+id/centerButton"
        android:layout_alignRight="@+id/centerButton"
        ></Button>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_above="@+id/centerButton"
        android:layout_alignStart="@+id/centerButton"
        ></Button>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_toRightOf="@+id/centerButton"
        android:layout_alignTop="@+id/centerButton"
        ></Button>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/purple_500"
        android:layout_toLeftOf="@+id/centerButton"
        android:layout_alignBottom="@+id/centerButton"
        ></Button>

</RelativeLayout>